<p id="notice"><%= notice %></p>

<h1>Site Infos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Heading</th>
      <th>Subheading</th>
      <th>Lead</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @site_infos.each do |site_info| %>
      <tr>
        <td><%= site_info.brand %></td>
        <td><%= site_info.heading %></td>
        <td><%= site_info.subheading %></td>
        <td><%= site_info.lead %></td>
        <td><%= link_to 'Show', site_info %></td>
        <td><%= link_to 'Edit', edit_site_info_path(site_info) %></td>
        <td><%= link_to 'Destroy', site_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

