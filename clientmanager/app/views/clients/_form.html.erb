<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :company_location %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :city, collection: ['Sydney', 'Melbourne', 'Adelaide'], as: :radio_buttons %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
