<%= simple_form_for(@company_location) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :country %>
    <% if params[:company] %>
      <%= f.input :company_id, input_html: { value: @company.id }, as: :hidden %>
      <label for="company_name">Company name</label>
      <input value="<%= @company.name %>" id="company_name" disabled>
    <% else %>
      <%= f.association :company %>
    <% end %>
  </div>

  <div class="form-actions" style="margin-top: 10px;">
    <%= f.button :submit %>
  </div>
<% end %>
